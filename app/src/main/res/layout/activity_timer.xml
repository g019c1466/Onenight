<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onenight.timer">

    <TextView
        android:id="@+id/write_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="残り時間"
        android:textSize="45sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="@font/nemukemedium"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会議終了"
        android:textColor="#D61818"
        tools:fontFamily="@font/nemukemedium"
        tools:layout_constraintTop_toBottomOf="@id/write_time"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="463dp" />
</androidx.constraintlayout.widget.ConstraintLayout>