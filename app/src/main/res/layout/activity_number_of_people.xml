<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="64dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:fontFamily="@font/nemukemedium"
        android:text="人数選択"
        android:textColor="#FFAE1717"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        tools:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/people4"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nemukemedium"
        android:text="4人"
        android:textColor="#FFAE1717"
        android:textSize="30dp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/people5"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="376dp"
        android:fontFamily="@font/nemukemedium"
        android:text="5人"
        android:textColor="#FFAE1717"
        android:textSize="30dp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/people6"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="224dp"
        android:fontFamily="@font/nemukemedium"
        android:text="6人"
        android:textColor="#FFAE1717"
        android:textSize="30dp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people5" />


</androidx.constraintlayout.widget.ConstraintLayout>